<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/articles/edit/<%=data[0].gk%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">Title</td><td>: <input type="text" name="title" value="<%=data[0].title%>" required></td>
                 </tr>
                 <tr>
                    <td class="label">Domain</td>
					<td valign="top">: 
                        <textarea name="text" required cols="30" rows="5"><%=data[0].domain%></textarea>
                    </td>
                </tr>
                <tr>
                    <td class="label">Category</td><td>: <input type="text" value="<%=data[0].category%>" name="category" required></td>
                 </tr>
                  <tr>
                    <td class="label">Text</td><td>: <input type="text" name="text" value="<%=data[0].text%>" required></td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
